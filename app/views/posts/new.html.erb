<h3>スケジュール内容</h3>

<%= form_with model: @post do |f| %>

    <table>
        <tr>
          <th><%= f.label :title ,"タイトル" %></th>
          <td><%= f.text_field :title %></td>
        </tr>
 
        <tr>
          <th><%= f.label :startdate ,"開始日" %></th>
          <td><%= f.date_field :startdate %></td>
        </tr>
 
        <tr>
          <th><%= f.label :enddate ,"終了日" %></th>
          <td><%= f.date_field :enddate %></td>
        </tr>
 
        <tr>
          <th><%= f.label :check ,"終日" %></th>
          <td><%= f.check_box :check ,{checked: true}, "true", "false" %> </td>
        </tr>

      </table>
 
      <div>
        <ul>
          <li><%= f.submit "スケジュール登録する"%></li>
          <li><%= link_to "スケジュール情報一覧に戻る", :posts %></li>
        </ul>
      </div>
    <% end %>